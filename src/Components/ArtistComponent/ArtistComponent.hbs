<div class="artist">
    <div class="info artist__info">
        {{#if Artist.Avatar}}
            <img class="info__photo" src="{{port}}{{Artist.Avatar}}" alt="">
        {{/if}}
        <div style="display: grid; gap: 15px;">
            <div class="medium-text info__name">Исполнитель</div>
            <div class="large-text">{{Artist.Name}}</div>
            <div class="album__info__options">
                {{#if user}}
                    <div class="big-like-btn" data-section="artistlike" data-url="{{Artist.Id}}">
                        {{#if Artist.isLiked}}
                        <div class=""><img class="big-like-btn__like" data-section="artistlike" data-url="{{Artist.Id}}" src="/static/img/LikePressed.svg"></div>
                        {{else}}
                        <div class=""><img class="big-like-btn__like" data-section="artistlike" data-url="{{Artist.Id}}" src="/static/img/Like.svg"></div>
                        {{/if}}
                        <div class="medium-text" data-section="artistlike" data-url="{{Artist.Id}}">Нравится</div>
                    </div>
                {{/if}}
                <div class="medium-text album__share" data-section="artistShare" data-id="{{Artist.Id}}">
                    <img class="album__share-btn" src="/static/img/Share.svg" alt="" data-section="artistShare" data-id="{{Artist.Id}}">
                    <div class="medium-text album__share__copied" data-artist-share="{{Artist.Id}}" style="color: black;">Ссылка скопирована</div>
                </div>
            </div>
            
        </div>
    </div>
    <div class="artist__tracks">
        <h1 class="artist__title">Песни</h1>
        <div class="more-btn medium-text" data-section="moreBtn">{{showMore}}</div>
    </div>
    <ul class="playlist artist__list">
        {{#each Tracks}}
            <li class="playlist__item" data-section="miniPlayButton" data-url="{{@index}}">
                <div class="playlist__image-container" style="display: inline-block;">
                    <div class="medium-text playlist__index playlist__index__position"></div>
                    <div class="playlist__playbutton playlist__playbutton__position" data-section="miniPlayButton"
                        data-url="{{@index}}"></div>
                </div>
                <div style="display: flex; flex-direction: column; gap: 15px;">
                    <img class="playlist__photo" src="{{../port}}{{this.Preview}}" alt="">
                </div>
                <div class="medium-text playlist-item__name" data-section="miniPlayButton" data-url="{{@index}}"
                    style="display: inline-block;">
                    {{this.Name}}
                </div>
                <div class="playlist-item__options" style="display: inline-block;">
                    <div class="medium-text playlist-item__options__duration">
                        {{this.Duration}}
                    </div>
                    <div class="playlist-item__options__img">
                        <img src="/static/img/Options.svg" class="" data-section="trackOptions" data-id="{{this.Id}}" alt="">
                    </div>
                </div>
                <div class="options" style="display: none;" data-section="{{this.Id}}">
                    <div class="medium-text options__share" data-section="trackShare" data-id="{{this.Id}}" >
                        Поделиться
                        <div class="medium-text options__share__copied" data-track-share="{{this.Id}}" style="color: black;">Ссылка скопирована</div>
                    </div>
                    <div class="medium-text options__add-to-playlist" data-section="showAvaliblePlaylists" data-id="{{this.Id}}">Добавить в плейлист</div>
                    <div class="options__avaliablePlaylists" style="display: none;" data-list="{{this.Id}}">
                    </div>
                </div>
            </li>
        {{/each}}
    </ul>
    <h1 class="artist__title">Альбомы</h1>
    <ul class="albumlist artist__album-list">
        {{#each Artist.Albums}}
            <li class="albumlist__item">
                <div class="albumlist__image-container">
                    <img class="albumlist__photo" data-section="link" data-url="/album/{{this.Id}}" data-id="{{this.Id}}"
                        src="{{../port}}{{this.Preview}}" alt="">
                    <div class="albumlist__playbutton albumlist__playbutton__position" data-section="playButton"
                        data-url="{{this.Id}}"></div>
                </div>
                <a href="/album/{{this.Id}}" class="medium-text albumlist-item__name" data-section="link"
                    data-id="{{this.Id}}" data-url="/album/{{this.Id}}">
                    {{this.Name}}
                </a>
            </li>
        {{/each}}
    </ul>
</div>